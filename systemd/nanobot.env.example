# Paths (optional; defaults to ~/nanoBot_memU and ~/nanobot-venv)
# NANOBOT_REPO=/root/nanoBot_memU
# NANOBOT_VENV=/root/nanobot-venv

# Nanobot config via env (used when ~/.nanobot/config.json is missing)
NANOBOT_AGENTS__DEFAULTS__MODEL=minimax/MiniMax-M2.1
NANOBOT_CHANNELS__WHATSAPP__ENABLED=true
NANOBOT_CHANNELS__WHATSAPP__BRIDGE_URL=ws://localhost:3001
NANOBOT_PROVIDERS__MINIMAX__API_KEY=REPLACE_ME
NANOBOT_PROVIDERS__MINIMAX__API_BASE=https://api.minimax.io/v1

# MemU LLM (DeepSeek)
DEEPSEEK_API_KEY=REPLACE_ME
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_CHAT_MODEL=deepseek-chat

# MemU Embeddings (SiliconFlow)
SILICONFLOW_API_KEY=REPLACE_ME
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
SILICONFLOW_EMBED_MODEL=BAAI/bge-m3

# MemU persistence
MEMU_DB_DSN=sqlite:////var/lib/nanobot/memu.db

# WhatsApp Bridge options (optional)
WA_MARK_ONLINE=1
WA_AUTO_READ=1
